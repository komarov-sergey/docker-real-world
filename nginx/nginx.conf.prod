server {
  listen 80;

  server_name real-world-docker.com;

  location / {
    proxy_pass http://frontend:3000;
  }

  location /api {
    proxy_pass http://api:3001;
    rewrite ^/api/(.*) /$1 break;
  }

  location /auth/api {
    proxy_pass http://api:3002;
    rewrite ^/api/(.*) /$1 break;
  }
}